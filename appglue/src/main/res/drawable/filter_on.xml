<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is the broder -->
    <item>

        <shape
            android:shape="rectangle"
            >
            <stroke
                android:color="@color/filter"
                android:width="2dip"
                />
            <solid
                android:color="@color/white"
                />
            <padding
                android:top="2dip"
                android:left="2dip"
                android:right="2dip"
                android:bottom="2dip"
                />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle"
            >
            <solid android:color="@color/filter_light"
                />
        </shape>
    </item>
</layer-list>