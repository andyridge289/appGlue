<?xml version="1.0" encoding="utf-8"?>
<layer-list 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    >
    
    <!-- This is the border -->
	<item>
		
		<shape 
		    android:shape="rectangle" 
		    >
		    <stroke
		        android:color="@color/android_blue"
		        android:width="5dip"
		        />
		    <solid 
		        android:color="@color/white" 
		        />
		    <padding
		        android:bottom="3dp"
		        android:top="3dp"
                android:right="3dip"
		    	/>
		    
		</shape>
	</item>
	
	<item>
		<shape 
		    android:shape="rectangle" 
		    >
		 	<solid
                android:color="@color/white"
                />
		</shape>
	</item>

    <item>
        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="@color/android_blue_very"
                />
        </shape>
    </item>
</layer-list>