<?xml version="1.0" encoding="utf-8"?>
<layer-list 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    >
    
    <!-- This is the broder -->
	<item>
		
		<shape 
		    android:shape="rectangle" 
		    >
		    
		    <solid 
		        android:color="@color/white" 
		        />
		    
		    <stroke
		        android:width="5dip"
		        android:dashWidth="10dip"
		        android:dashGap="5dip"
		        android:color="@color/android_purple"
		        />
		    
		    <padding
		        android:bottom="5dp"
		        android:left="5dp"
		        android:top="5dp"
		    	/>
		
		    <corners 
		        android:topLeftRadius="5dp"
		        android:bottomLeftRadius="5dip" 
		        />
		    
		</shape>
	</item>
	
	<item>
		<shape 
		    android:shape="rectangle" 
		    >
		    
		    <padding
		        android:bottom="5dp"
		        android:left="5dp"
		        android:right="5dp"
		        android:top="5dp" 
		        />
		
		    	<solid 
		    	    android:color="@color/white" 
		    	   	/>
		</shape>
	</item>
</layer-list>