<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <View
                android:id="@+id/composite_item_bg"
                android:layout_width="fill_parent"
                android:layout_height="28dip"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/composite_icon_container"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dip"
                android:background="@drawable/circle"
                >

                <ImageView
                    android:id="@+id/composite_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="8dip"
                    android:background="@drawable/icon"
                    android:contentDescription="@string/composite_icon"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/info_button"
                android:layout_width="wrap_content"
                android:layout_height="28dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_action_next_item"
                />

            <TextView
                android:id="@+id/composite_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/composite_name"
                android:layout_toEndOf="@id/composite_icon_container"
                android:layout_toRightOf="@id/composite_icon_container"
                android:layout_toLeftOf="@id/info_button"
                android:layout_toStartOf="@id/info_button"
                />

            <LinearLayout
                android:id="@+id/composite_components"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/composite_icon_container"
                android:layout_below="@id/composite_name"
                android:orientation="vertical"
                android:layout_margin="5dip"
                />

            <!--<TextView-->
            <!--android:id="@+id/composite_components"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="4dip"-->
            <!--android:layout_marginLeft="5dip"-->
            <!--android:layout_marginStart="5dip"-->
            <!--android:textSize="14sp"-->
            <!--android:text="@string/composite_components"-->
            <!--android:layout_toEndOf="@id/composite_icon"-->
            <!--android:layout_toRightOf="@id/composite_icon"-->
            <!--android:layout_below="@id/composite_name"-->
            <!--/>-->

        </RelativeLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>
