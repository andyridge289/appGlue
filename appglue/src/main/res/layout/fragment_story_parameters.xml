<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
	<LinearLayout    
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	
		<TextView
		    android:id="@+id/story_param_name"
		    style="@style/FillWrap"
		    android:textSize="24sp"
		    android:layout_marginBottom="5dip"
		    />
		
		<TextView
		    android:text="Inputs"
		    style="@style/Simple.Title"
		    android:layout_marginTop="5dip"
		    />
		
		<TextView
		    android:text="No inputs for this component"
		    android:id="@+id/story_param_no_inputs"
		    style="@style/FillWrap"
		    android:visibility="gone"
		    android:layout_marginTop="2dip"
		    />
		
		<LinearLayout
		    android:id="@+id/story_param_inputs"
		    style="@style/FillWrap"
		    android:visibility="gone"
		    android:orientation="vertical"
		    />
		
		<TextView
		    android:text="Outputs"
		    style="@style/Simple.Title"
		    />
		
		<TextView
		    android:text="No outputs for this component"
		    android:id="@+id/story_param_no_outputs"
		    style="@style/FillWrap"
		    android:visibility="gone"
		    android:layout_marginTop="2dip"
		    />
		
		<LinearLayout
		    android:id="@+id/story_param_outputs"
		    style="@style/FillWrap"
		    android:visibility="gone"
		    android:orientation="vertical"
		    />
	</LinearLayout>
</ScrollView>