<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_service_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/composite_icon"
            android:contentDescription="@string/component_icon_contdesc"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_margin="4dip"
            android:src="@drawable/icon"
            android:paddingBottom="5dip"
            />

        <EditText
            android:id="@+id/composite_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_name"
            android:paddingTop="10dip"
            android:textSize="20sp"
            android:textStyle="bold" 
            />
 
        
    </LinearLayout>
    
	<TextView
		style="@style/Simple.Title"
       	android:text="@string/simple_title_description"
       	/>

    <EditText
        android:id="@+id/composite_description_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:text="@string/simple_service_description_text"
        />
    
    <TextView
        style="@style/Simple.Title"
        android:text="Status" 
        />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <CheckBox 
	        android:id="@+id/composite_active"
	        android:text="Active"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        />
	    
	    <CheckBox
	        android:id="@+id/composite_running"
	        android:text="Running"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        />
        
    </LinearLayout>

    <LinearLayout
        style="@style/Simple.Title"
        android:orientation="horizontal">
    
		<TextView
		    style="@style/Simple.Title"
		    android:layout_marginBottom="5dip"
	        android:layout_height="wrap_content"
	        android:layout_width="0dip"
	        android:layout_weight="4"
	        android:text="Components"
	        android:gravity="center"
	        />
		
		<ImageButton
		    android:id="@+id/composite_edit_composition"
		    android:layout_width="0dip"
            android:contentDescription="Edit composition"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ab_edit"
		    />
	
	</LinearLayout>

	<ListView
	    android:id="@+id/composite_component_list"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    />

</LinearLayout>