<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        style="@style/tab_bar"
        android:id="@+id/value_button_bar"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true">

        <Button
            style="@style/tab"
            android:id="@+id/wiring_button_all"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/wiring_tab"
            />

        <Button
            style="@style/tab"
            android:id="@+id/filter_button_all"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/filter_tab"
            />

        <Button
            style="@style/tab"
            android:id="@+id/value_button_all"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/value_tab"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_above="@+id/value_button_bar"
        >

        <RelativeLayout
            android:id="@+id/wiring_first"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/first_icon"
                android:contentDescription="@string/first_component_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_icon"
                android:layout_centerHorizontal="true"
                />

            <com.appglue.layout.FloatingActionButton
                android:id="@+id/first_add"
                android:layout_width="48dip"
                android:layout_height="48dip"
                app:fabcolor="@color/android_blue"
                app:fabdrawable="@drawable/ic_add_white_small"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="8" >

            <com.appglue.layout.WiringMap
                android:id="@+id/firstWiringMap"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wiring_second"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/second_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/second_component_icon"
                android:layout_centerInParent="true"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/second_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/second_icon"
                />

            <com.appglue.layout.FloatingActionButton
                android:id="@+id/second_add"
                android:layout_width="48dip"
                android:layout_height="48dip"
                app:fabcolor="@color/android_blue"
                app:fabdrawable="@drawable/ic_add_white_small"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>