<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/log_component_icon_container"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="4dip"
        android:layout_marginLeft="8dip"
        android:layout_marginStart="8dip"
        android:background="@drawable/circle_log">

        <ImageView
            android:id="@+id/log_component_icon"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_done_white_18dp"
            android:contentDescription="@string/composite_icon" />

    </RelativeLayout>

    <TextView
        android:id="@+id/log_component_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tube Status lookup"
        android:layout_toRightOf="@id/log_component_icon_container"
        android:layout_toEndOf="@id/log_component_icon_container"
        android:layout_marginTop="2dip"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/log_component_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dip"
        android:layout_alignParentEnd="true"
        android:textSize="10sp"
        android:text="Thursday 30th October 2014 19:31:34" />

    <TextView
        android:id="@+id/log_component_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/log_component_icon_container"
        android:layout_toEndOf="@id/log_component_icon_container"
        android:layout_below="@id/log_component_name"
        android:textSize="10sp"
        android:text="SUCCESS" />

</RelativeLayout>