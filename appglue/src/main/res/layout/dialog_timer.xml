<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

	<TextView 
    	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:text="@string/how_often"
   		android:textColor="@color/dim_on_dark"
   		android:layout_margin="5dip"
   		android:textSize="16sp"
       	/>
   
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/once_every"
       android:textColor="@color/white"
       android:layout_margin="5dip"
       android:textSize="16sp"
       />
   
	   <LinearLayout
	       style="@style/FillWrap"
	       android:orientation="horizontal"
	       >
	   
		   <EditText
		       android:id="@+id/timer_edit_numerals"
		       android:layout_width="0dip"
		       android:layout_weight="1"
		       android:layout_height="wrap_content"
		       android:inputType="number"
		       android:textColor="@color/white"
		       />
		   
		   <Spinner
		       android:id="@+id/timer_spinner_intervals"
		       android:layout_width="0dip"
		       android:layout_weight="1"
		       android:layout_height="wrap_content"
		       android:textColor="@color/white"
		       />
	   
	   </LinearLayout>
	   
	   <CheckBox
	       style="@style/FillWrap"
	       android:id="@+id/timer_run_now"
	       android:text="@string/run_now"
	       android:textColor="@color/white"
	       />

</LinearLayout>