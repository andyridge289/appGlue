            />
        
        <activity
            android:name=".ActivityComposite"
            android:theme="@android:style/Theme.Holo.Light"
            android:uiOptions="splitActionBarWhenNarrow"
            />
        
        <activity
            android:name=".ActivityWiring"
            android:label="@string/application_name"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="landscape" />
        
        <activity
            android:name=".ActivityRunning"
            android:label="@string/application_name"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        
        <activity
            android:name=".ShortcutActivity" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <service android:name=".serviceregistry.RegistryService"/>
        <service android:name="com.appglue.engine.TriggerService"></service>
        <service android:name=".engine.OrchestrationService" />

        <!-- Services that can be composed -->
        <service android:name=".services.SayHelloService" />
        <service android:name=".services.NotificationService" />
        <service android:name=".services.ClockService" />
        <service android:name=".services.TubeService" />
        <service android:name=".services.ToastService" />
        <service android:name=".services.SendSMSService" />
        <service android:name=".services.PebbleNotification" />
        <service android:name=".services.LocationService" />
        <service android:name=".services.LaunchAppService" />
        
        <service android:name="com.appglue.services.util.WifiService" />
        <service android:name="com.appglue.services.util.BluetoothService" />
        <service android:name="com.appglue.services.util.AirplaneService" />
         
        <receiver android:name=".services.triggers.ReceiveSMSTrigger" android:exported="true" >
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        
        <receiver android:name=".services.triggers.PowerTrigger" android:exported="true" >
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>
        
